{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Email Entity Schema",
  "type": "object",
  "properties": {
    "notificationId": {
      "type": "integer"
    },
    "from": {
      "type": "string"
    },
    "to": {
      "type": "string"
    },
    "header": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "attachments": {
      "id": "attachmentData",
      "type": "array",
      "items": {
        "type": "object",
        "$ref": "attachment.json"
      }
    }
  },
  "required": [
    "notificationId",
    "from",
    "to",
    "header",
    "body"
  ]
}
